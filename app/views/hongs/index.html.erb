<div>We support [zip, 7z, tar.gz] </div>

<% if !flash[:notice].blank? %>
    <div class = "alert alert-info">
      <%= flash[:notice] %>
    </div>
<% end %>

<br />

<%= link_to 'New Zip', new_hong_path, class: 'btn btn-primary' %>
<br />
<br />

<table class = "table table-bordered table-striped">
  <tr>
    <th>Name</th>
    <th>Download Link</th>
    <th> </th>
  </tr>
  </thead>

  <tbody>
  <% @hongs.each do |hong| %>

      <tr>
        <td><%= hong.name %></td>
        <td><%= link_to 'Download zip', hong.attachment_url %></td>
        <td><%= button_to 'Delete',  hong, method: :delete, class: 'btn btn-danger', confirm: "Are you sure that you wish to delete #{hong.name}?" %></td>
      </tr>

  <% end %>
  </tbody>

</table>
